{
  "name": "minecraft-cit-converter",
  "version": "1.0.0",
  "description": "Converts modern Minecraft item model JSON files to CIT properties files",
  "main": "convert-to-cit.ts",
  "scripts": {
    "build": "bun run build.ts",
    "build:cmd": "bun fix-specific-models.ts . dist",
    "build:simple": "bun create-immediate-3d.ts",
    "build:cit-pommel": "bun cit-pommel-converter.ts . dist/cit-pommel",
    "clean": "rm -rf dist",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest"
  },
  "keywords": [
    "minecraft",
    "resource-pack", 
    "cit",
    "custom-item-textures",
    "converter"
  ]
}
